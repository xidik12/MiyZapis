// Premium Listings
model PremiumListing {
  id                String @id @default(cuid())
  specialistId      String

  // Listing details
  type              String // FEATURED, SPONSORED, TOP_RATED
  category          String? // If specific to a category
  location          String? // If specific to a location

  // Boost settings
  boostMultiplier   Float @default(10.0) // How much to boost in search results
  priority          Int @default(5) // Higher = appears first (1-10)

  // Pricing
  price             Float // One-time or recurring price
  billingType       String // ONE_TIME, WEEKLY, MONTHLY

  // Schedule
  startDate         DateTime
  endDate           DateTime

  // Status
  status            String @default("ACTIVE") // ACTIVE, PAUSED, EXPIRED
  isActive          Boolean @default(true)

  // Performance tracking
  impressions       Int @default(0)
  clicks            Int @default(0)
  conversions       Int @default(0) // Bookings from premium listing

  // Payment
  paidAmount        Float
  paymentDate       DateTime

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  specialist        User @relation("UserPremiumListings", fields: [specialistId], references: [id], onDelete: Cascade)
  analytics         PremiumListingAnalytics[]

  @@index([specialistId, status])
  @@index([status, startDate, endDate])
  @@index([isActive, priority])
  @@map("premium_listings")
}

model PremiumListingAnalytics {
  id                String @id @default(cuid())
  listingId         String

  // Time period
  date              DateTime

  // Metrics
  impressions       Int @default(0)
  clicks            Int @default(0)
  conversions       Int @default(0)
  revenue           Float @default(0.0) // Booking revenue from this listing

  // Performance
  ctr               Float @default(0.0)
  conversionRate    Float @default(0.0)
  averageBookingValue Float @default(0.0)

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  listing           PremiumListing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([listingId, date])
  @@index([listingId, date])
  @@map("premium_listing_analytics")
}

// Platform Transaction Tracking (for $1 per booking fee)
model PlatformTransaction {
  id                String @id @default(cuid())
  bookingId         String
  userId            String // Customer who paid
  specialistId      String // Specialist who provided service

  // Transaction type
  type              String // BOOKING_FEE, COMMISSION, AD_PAYMENT, PREMIUM_LISTING

  // Amount details
  amount            Float // Platform's fee amount
  currency          String @default("USD")

  // Source
  sourceType        String // BOOKING, ADVERTISEMENT, SUBSCRIPTION
  sourceId          String // ID of the source entity

  // Payment status
  status            String @default("PENDING") // PENDING, COMPLETED, FAILED, REFUNDED

  // Settlement
  settledAt         DateTime?
  settlementBatch   String? // Batch ID for bulk settlements

  // Metadata
  description       String?
  metadata          String? // JSON

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  customer          User @relation("CustomerPlatformTransactions", fields: [userId], references: [id])
  specialist        User @relation("SpecialistPlatformTransactions", fields: [specialistId], references: [id])

  @@index([userId, type])
  @@index([specialistId, type])
  @@index([status, settledAt])
  @@index([sourceType, sourceId])
  @@map("platform_transactions")
}

// Referral System Updates (new wallet credit structure)
model ReferralReward {
  id                String @id @default(cuid())
  referrerId        String
  referredId        String?

  // Reward type
  type              String // CUSTOMER_REFERRAL, SPECIALIST_REFERRAL

  // Reward amount
  amount            Float // $2 for customer, $5 for specialist referral
  currency          String @default("USD")
  appliedToWallet   Boolean @default(false)

  // Specialist special reward
  freeMonths        Int? // 1 month free for specialist-to-specialist referrals
  freeMonthsApplied Boolean @default(false)

  // Status
  status            String @default("PENDING") // PENDING, COMPLETED, EXPIRED
  completedAt       DateTime?

  // Completion requirements
  requirementMet    String? // "FIRST_BOOKING_COMPLETED", "SPECIALIST_VERIFIED"
  requirementMetAt  DateTime?

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  referrer          User @relation("ReferrerRewards", fields: [referrerId], references: [id], onDelete: Cascade)
  referred          User? @relation("ReferredRewards", fields: [referredId], references: [id], onDelete: Cascade)

  @@index([referrerId, status])
  @@index([referredId, status])
  @@map("referral_rewards")
}

// Business Model (Dental clinics, salons, spas with multiple employees)
model Business {
  id           String  @id @default(cuid())
  userId       String  @unique

  // Business information
  businessName String
  description  String?
  descriptionKh String? // Khmer description
  businessType String  // CLINIC, SALON, SPA, GYM, STUDIO, etc.

  // Location
  address      String?
  city         String?
  province     String?
  country      String  @default("Cambodia")
  latitude     Float?
  longitude    Float?

  // Contact
  businessPhone     String?
  businessEmail     String?
  website           String?

  // Business registration
  registrationNumber String?
  taxId              String?
  isRegistered       Boolean @default(false)
  isVerified         Boolean @default(false)
  verifiedDate       DateTime?

  // Operating hours
  operatingHours String? // JSON string for operating hours

  // Business metrics
  rating           Float   @default(0.0)
  reviewCount      Int     @default(0)
  totalBookings    Int     @default(0)
  totalRevenue     Float   @default(0.0)

  // Images
  logo             String?
  coverImage       String?
  images           String? // JSON array of image URLs

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user             User @relation(fields: [userId], references: [id], onDelete: Cascade)
  services         BusinessService[]

  // Indexes
  @@index([city, isVerified])
  @@index([businessType])
  @@index([rating])
  @@map("businesses")
}


// Business Service Model (Services offered by businesses)
model BusinessService {
  id          String  @id @default(cuid())
  businessId  String

  // Service details
  name        String
  nameKh      String? // Khmer name
  description String
  descriptionKh String?
  category    String

  // Pricing
  basePrice   Float
  currency    String @default("USD")

  // Duration
  duration    Int // Duration in minutes

  // Service options
  requiresEmployee Boolean @default(true) // If true, customer must select an employee
  availableFor     String? // JSON array of employee IDs who can provide this service

  // Images
  images      String? // JSON array of image URLs

  // Settings
  isActive    Boolean @default(true)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  bookings   EmployeeBooking[]

  // Indexes
  @@index([businessId, isActive])
  @@index([category])
  @@map("business_services")
}

// Employee Booking Model (Bookings for business services with specific employees)
model EmployeeBooking {
  id             String @id @default(cuid())
  bookingId      String
  businessId     String
  employeeId     String
  serviceId      String

  // Booking status
  status         String @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED

  // Time
  scheduledAt    DateTime
  duration       Int
  completedAt    DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  employee       Employee @relation(fields: [employeeId], references: [id])
  service        BusinessService @relation(fields: [serviceId], references: [id])

  // Indexes
  @@index([businessId, status])
  @@index([employeeId, scheduledAt])
  @@index([status, scheduledAt])
  @@map("employee_bookings")
}